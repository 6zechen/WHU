page{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center
}
.head{
    position: absolute;
    top: 0;left: 0;right: 0;
    height: 200rpx;
    background-color: #c1bbbb;
    z-index: -10;
}
.infobox{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    margin-top: 100rpx;
    background-color: white;
    width: 90%;
    height: 100%;
    border-radius: 10rpx;
    overflow: visible
}

.infobox>image{
    margin-top: -100rpx;
    height: 200rpx;
    width: 200rpx;
}

.edit{
    width: 100rpx;
    height: 100rpx;
    background-color: #0ecf9a;
    border-bottom-left-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    position: absolute;
    margin-top: 100rpx;
    z-index: 10;
    right: 100rpx;
    align-self: flex-end;
    box-shadow: 1rpx 1rpx 20rpx #888888;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center
}
.edit>image{
    width: 50rpx;
    height: 50rpx;
}

.motionbox{
    border-top: 1rpx solid black;
    border-bottom: 1rpx solid black;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    width: 100%;
    margin-top: 30rpx
}
.idbox{
    border-top: 1rpx solid black;
    border-bottom: 1rpx solid black;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
    width: 100%;
    margin-top: 30rpx
}
.idbox>image{
    width: 20px;
    height: 20px;
    margin-right: 10px
}
.starbox{
    border-bottom: 1rpx solid black;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    height: 100rpx;
    width: 100%;
}
.starbox>image{
    width: 20px;
    height: 20px;
    margin-right: 10px
}
.habitbox{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
}
.habitbox>.box1{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    width: 100%
}
.box1>view{
    flex-grow: 1;
    text-align: left;
    color: #98b8cf;
    font-size: 30rpx
}
.box1>image{
    width: 20rpx;
    height: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx
}
.habitbox>.box2{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: auto;
    width: 100%;
    min-height: 50rpx;
    margin-top: 20rpx
}
.box2>.box1{
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-right: 10px
}
.habit{
    width: auto;
    padding-left: 10rpx;
    padding-right: 10rpx;
    background-color: #aad5ff;
    color: #0066CC !important;
    margin-left: 10rpx;
    text-align: center;
    box-sizing: border-box;
    flex-grow: unset;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    border-radius: 50rpx
}
.habitbtn{
    width: 70px !important;
    height: 40px !important;
    border-radius: 25px;
    border-bottom-left-radius:0;
    background-color: #fc6ab5;
    border: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center
}
.habitbtn>image{
    width: 20px;
    height: 20px;
}